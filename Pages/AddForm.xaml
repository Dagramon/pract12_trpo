<Page x:Class="pract12_trpo.Pages.AddForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract12_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddForm">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button HorizontalAlignment="Left" Click="GoBack">Назад</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <Label>Логин</Label>
                <TextBox Text="{Binding Login}"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Имя пользователя</Label>
                <TextBox Text="{Binding UserName}"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Почта</Label>
                <TextBox Text="{Binding Email}"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Пароль</Label>
                <TextBox Text="{Binding Password}"></TextBox>
            </StackPanel>
            <Button Click="Save">Сохранить</Button>
        </StackPanel>
    </Grid>
</Page>
